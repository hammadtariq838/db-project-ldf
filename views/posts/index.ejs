<% layout('layouts/boilerplate')%>
<div class="container">
  <h1>All posts</h1>

  <% for (let post of posts){%>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-8">
        <div class="card-body">
          <!-- dimmed write posted by -->
          <span>
            <small
              class="text-muted <% if (post.userid == userid){%> text-primary <% }%>"
            >
              Posted by <% if (post.userid == userid){%> You <% }else{%> <%=
              post.username %> <% }%>
            </small>
          </span>
          <p class="card-text"><%= post.body %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex justify-content align-items-center">
              <!-- upvote downvote -->

              <form action="/posts/<%=post.postid%>/upvote" method="POST">
                <button class="btn btn-primary" type="submit">Upvote</button>
              </form>
              <form action="/posts/<%=post.postid%>/downvote" method="POST">
                <button class="btn btn-success" type="submit">Downvote</button>
              </form>
            </div>
            <a class="btn btn-secondary </div>" href="/posts/<%=post.postid%>"
              >View <% post.body %>
            </a>
          </div>
        </div>
      </div>
    </div>
    <% }%>
  </div>
</div>
